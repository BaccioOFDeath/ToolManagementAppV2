<Window x:Class="ToolManagementAppV2.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tool Inventory Management – Enter Password"
        Height="650" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="White"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">

    <DockPanel Margin="10">

        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Background="#DDD" Padding="10">
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                       FontWeight="Bold" FontSize="20" Margin="10" />
        </Border>

        <!-- MAIN CONTENT -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="PromptTextBlock"
                       Text="Enter your password:"
                       FontSize="18"
                       FontWeight="Bold"
                       Grid.Row="0"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <PasswordBox x:Name="PasswordBox"
                         Grid.Row="1"
                         Height="40"
                         Width="400"
                         FontSize="16"
                         HorizontalAlignment="Center"
                         FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"/>

            <TextBlock x:Name="ErrorTextBlock"
                       Grid.Row="2"
                       Foreground="Red"
                       FontSize="14"
                       Visibility="Collapsed"
                       Margin="0,10,0,10"
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="OK"
                        Width="150"
                        Height="50"
                        FontSize="16"
                        Margin="10"
                        IsDefault="True"
                        Click="OK_Click"/>
                <Button Content="Cancel"
                        Width="150"
                        Height="50"
                        FontSize="16"
                        Margin="10"
                        IsCancel="True"
                        Click="Cancel_Click"/>
            </StackPanel>

            <TextBlock x:Name="ForgotPasswordTextBlock"
                       Text="Forgot your password?"
                       Foreground="Blue"
                       TextDecorations="Underline"
                       FontSize="14"
                       Visibility="Collapsed"
                       Cursor="Hand"
                       Grid.Row="4"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"
                       MouseLeftButtonUp="ForgotPasswordTextBlock_MouseLeftButtonUp"/>
        </Grid>
    </DockPanel>
</Window>
